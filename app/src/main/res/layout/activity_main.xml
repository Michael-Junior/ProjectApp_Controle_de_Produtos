<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f76a65"
    tools:context=".MainActivity">

    <com.tsuryo.swipeablerv.SwipeableRecyclerView
        android:id="@+id/rv_produtos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/fragment_item_produto"
        tools:itemCount="8"
        app:leftBgColor="@color/white"
        app:leftImage="@drawable/ic_delete"
        app:leftText="Delete"
        app:rightBgColor="@color/color_edit_list_product"
        app:rightImage="@drawable/ic_edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>